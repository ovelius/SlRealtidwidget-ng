<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dot_is_scheduled_text"
            android:layout_margin="24dp" />



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dot_is_scheduled_text_dismiss"
                android:layout_gravity="center"
                android:layout_margin="24dp"  />


    <include
            layout="@layout/widgetlayout_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" android:id="@+id/include1"/>

    <include
            layout="@layout/widgetlayout_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" android:id="@+id/include2"/>


</LinearLayout>