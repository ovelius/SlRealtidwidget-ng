<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quick_toggle"
            android:layout_margin="24dp" />

    <FrameLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationZ="20dp"
                android:src="@drawable/round_arrow_downward_24"
                android:layout_gravity="end"
                android:layout_marginEnd="32dp"></ImageView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_toggle_dismiss"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationZ="20dp"
                android:src="@drawable/round_arrow_downward_24"
                android:layout_marginStart="32dp"></ImageView>
    </FrameLayout>

    <include layout="@layout/widgetlayout_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" android:id="@+id/include"/>


</LinearLayout>